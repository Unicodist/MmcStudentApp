<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/app_bg_1"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="144dp"
        android:layout_marginBottom="348dp"
        android:rotation="33"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ell" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="176dp"
        android:layout_marginTop="380dp"
        android:rotation="218"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ell" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginTop="63dp"
        android:fontFamily="@font/acme_regular"
        android:text="Mmc Student App"
        android:textColor="#103D78"
        android:textSize="36sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--button to register our new user-->

    <EditText
        android:id="@+id/register_form_first_name"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_marginTop="76dp"
        android:background="@drawable/field_input_background"
        android:paddingHorizontal="15dp"
        android:hint="First Name"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <EditText
        android:id="@+id/register_form_last_name"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/field_input_background"
        android:paddingHorizontal="15dp"
        android:hint="Last Name"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/register_form_first_name"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/register_form_first_name"
        app:layout_constraintTop_toBottomOf="@+id/register_form_first_name" />

    <EditText
        android:id="@+id/register_form_address"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/field_input_background"
        android:paddingHorizontal="15dp"
        android:hint="Address"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/register_form_last_name"
        app:layout_constraintStart_toStartOf="@+id/register_form_last_name"
        app:layout_constraintTop_toBottomOf="@+id/register_form_last_name" />

    <EditText
        android:id="@+id/register_form_phone"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/field_input_background"
        android:paddingHorizontal="15dp"
        android:hint="Phone Number"
        android:inputType="phone"
        app:layout_constraintEnd_toEndOf="@+id/register_form_address"
        app:layout_constraintStart_toStartOf="@+id/register_form_address"
        app:layout_constraintTop_toBottomOf="@+id/register_form_address" />

    <EditText
        android:id="@+id/registerr_form_password"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/field_input_background"
        android:paddingHorizontal="15dp"
        android:hint="Password"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/register_form_phone"
        app:layout_constraintStart_toStartOf="@+id/register_form_phone"
        app:layout_constraintTop_toBottomOf="@+id/register_form_phone" />

    <EditText
        android:id="@+id/register_form_confirm"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/field_input_background"
        android:paddingHorizontal="15dp"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/registerr_form_password"
        app:layout_constraintStart_toStartOf="@+id/registerr_form_password"
        app:layout_constraintTop_toBottomOf="@+id/registerr_form_password" />

    <Button
        android:id="@+id/register_submit"
        android:layout_width="125dp"
        android:layout_height="35dp"
        android:layout_below="@id/register_form_confirm"
        android:layout_marginTop="64dp"
        android:background="@drawable/signup_button_bg"
        android:text="Sign Up"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="@+id/register_form_confirm"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/register_form_confirm"
        app:layout_constraintTop_toBottomOf="@+id/register_form_confirm" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign up"
        android:textColor="@color/white"
        android:textSize="24dp"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="14dp"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@+id/register_form_confirm"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/register_form_confirm"
        app:layout_constraintTop_toBottomOf="@+id/register_submit">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:fontFamily="@font/roboto_regular"
            android:text="Already have an account?"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/register_form_confirm"
            app:layout_constraintTop_toBottomOf="@+id/register_submit" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:text="Click here"
            android:textColor="#103C78"
            android:textSize="12sp" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>